<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:minHeight="300dp"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/product_name"
        style="@style/Retail_Store_main_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="10dp"
        android:text="LG LED Television" />

    <ImageView
        android:id="@+id/product_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/company_logo" />
    
    <TextView
        android:id="@+id/product_price_label"
        style="@style/Retail_Store_loc_label_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="@string/product_price_label_txt" />

    <TextView
        android:id="@+id/product_price"
        style="@style/Retail_Store_loc_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:text="INR 20,000/-" />

    <Button
        android:id="@+id/add_to_cart_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01579b"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/add_to_cart_btn_txt" />

</LinearLayout>